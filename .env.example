# ESXi Connection Settings (Legacy - use servers.json for multi-server)
ESXI_HOST=192.168.1.10
ESXI_USER=root
ESXI_PASSWORD=your_password_here
ESXI_PORT=443
ESXI_VERIFY_SSL=false

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_PORT=5001
SECRET_KEY=change_this_to_random_secret_key

# WebSocket Proxy Settings
WS_PROXY_HOST=0.0.0.0
WS_PROXY_PORT=8765

# Session Settings
SESSION_TIMEOUT=180
TICKET_TIMEOUT=60

# Thumbnail Cache Settings
THUMBNAIL_CACHE_TTL=120
THUMBNAIL_DIR=./screenshots

# ESXi Request Queue Settings (Multi-user optimized)
ESXI_MAX_CONCURRENT=12
ESXI_MIN_INTERVAL=0.15

# ESXi Connection Pool (Multi-user support)
ESXI_POOL_SIZE=5
ESXI_CONNECTION_TTL=300

# VM List Cache (shared between users)
VM_LIST_CACHE_TTL=60

# Background Refresh (auto-update VM data)
BACKGROUND_REFRESH_INTERVAL=30

# Request Timeouts (seconds)
ESXI_REQUEST_TIMEOUT=30
ESXI_SCREENSHOT_TIMEOUT=20

# Circuit Breaker Settings
CB_FAILURE_THRESHOLD=5
CB_RECOVERY_TIMEOUT=30
CB_SUCCESS_THRESHOLD=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
